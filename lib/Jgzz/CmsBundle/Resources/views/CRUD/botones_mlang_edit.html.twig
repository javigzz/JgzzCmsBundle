{% if admin.locales is defined %}
<div class="btn-toolbar" style="margin:0;float:right"><div class="btn-group">
	{# todo: styles out! #}
    {# <span class="add-on">edit</span> #}
	{% for locale, idioma in admin.locales %}
		{% if admin.hasroute('edit') and admin.isGranted('EDIT') %}
		<a class="btn locale_edit locale_{{ locale }}" href="{{ admin.generateObjectUrl('edit', object, { 'locale': locale }) }}">
		{% elseif admin.hasroute('show') %}
		<a class="btn locale_show locale_{{ locale }}" href="{{ admin.generateObjectUrl('show', object, { 'locale': locale }) }}">
		{% endif %}
			<img src="{{ asset('bundles/jgzzcms/images/locale/' ~ locale ~ '.gif') }}" alt="{{ idioma }}" />
		</a>
	{% endfor %}
</div></div>
{% endif %}